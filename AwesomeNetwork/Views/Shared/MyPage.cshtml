@{
    ViewData["Title"] = "UserPage";
}
@using System.Globalization
@model AwesomeNetwork.ViewModels.Account.UserViewModel

<link rel="stylesheet" href="~/css/user-page.css" />
<div class="main">
    <div class="photo">
        <img class="main-img" src="https://thispersondoesnotexist.com" />
        <!--<img class="main-img" src="https://www.shutterstock.com/image-photo/funny-british-shorthair-cat-portrait-260nw-2097266809.jpg" />-->
        <!--<img class="main-img" src="https://daily.open.ru/upload/iblock/404/%D0%91%D0%B0%D0%BD%D0%BD%D0%B5%D1%80_2024.jpg" />-->
        <!--<img class="main-img" src="https://daily.open.ru/upload/main/465/фотка.jpg" />-->
        <!--<img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />-->
        <form class="frm" method="get" asp-controller="AccountManager" asp-action="StartEdit">
            <input class="button" type="submit" value="Редактировать" />
        </form>
    </div>
    <div class="about">
        <hr>
            <form>
                <p>Статус: <b>@Model.User.Status</b></p>
            <p>Дата рождения: <b>@Model.User.BirthDate.Day @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(@Model.User.BirthDate.Month) @Model.User.BirthDate.Year г.</b></p>
                <p>О себе: <b>@Model.User.About</b></p>
                <p>Email: <b>@Model.User.Email</b></p>
            </form>
        <hr>
            <p>Друзья</p>
        <hr>
    </div>
</div>

